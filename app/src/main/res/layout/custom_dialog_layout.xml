<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@drawable/background_custom_dialog"
        android:paddingHorizontal="@dimen/dimen_20"
        android:paddingVertical="@dimen/dimen_10"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:fontFamily="@font/mukta_light"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/image_view_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title" />

        <ImageView
            android:id="@+id/image_view_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dimen_10"
            app:layout_constraintBottom_toTopOf="@+id/text_view_message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_title" />

        <TextView
            android:id="@+id/text_view_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="@dimen/dimen_10"
            android:visibility="gone"
            android:fontFamily="@font/mukta_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_view_icon"
            tools:text="Message" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingVertical="@dimen/dimen_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_message">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_dark"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_marginEnd="@dimen/dimen_15"
                android:fontFamily="@font/mukta_light"
                app:cornerRadius="@dimen/dimen_3"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                android:paddingVertical="0dp"
                android:paddingHorizontal="@dimen/dimen_15"
                android:textSize="@dimen/text_size_15"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_light"
                android:gravity="center"
                android:fontFamily="@font/mukta_light"
                android:layout_marginHorizontal="@dimen/dimen_5"
                android:layout_width="wrap_content"
                android:textAllCaps="false"
                app:cornerRadius="@dimen/dimen_3"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:paddingHorizontal="@dimen/dimen_15"
                android:paddingVertical="0dp"
                android:textSize="@dimen/text_size_15"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>