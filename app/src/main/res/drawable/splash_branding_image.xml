<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center">
        <layer-list>
            <item
                android:width="24dp"
                android:height="24dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/bubblegum" />
                    <corners
                        android:topLeftRadius="50dp"
                        android:bottomLeftRadius="50dp"/>
                </shape>
            </item>
            <item
                android:left="24dp"
                android:width="24dp"
                android:height="24dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/blue" />
                </shape>
            </item>
            <item
                android:left="48dp"
                android:width="24dp"
                android:height="24dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/emerald" />
                </shape>
            </item>
            <item
                android:left="72dp"
                android:width="24dp"
                android:height="24dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/lemon" />
                </shape>
            </item>
            <item
                android:left="96dp"
                android:width="24dp"
                android:height="24dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/purple_200" />
                    <corners
                        android:topRightRadius="50dp"
                        android:bottomRightRadius="50dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>