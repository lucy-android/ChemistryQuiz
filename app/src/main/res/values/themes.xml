<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChemistryQuiz" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorPrimaryVariant">@color/corn_flower</item>
        <item name="colorOnPrimary">@color/corn_flower</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_atomic_structure</item>
        <item name="postSplashScreenTheme">@style/Theme.ChemistryQuiz</item>
        <item name="windowSplashScreenBackground">@color/ice_blue</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/indigo</item>
    </style>

    <style name="AuthTheme" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/FirebaseAuthActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FirebaseAuthActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/white</item>
    </style>

</resources>